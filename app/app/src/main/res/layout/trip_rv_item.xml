<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_trips"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/marging_small">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/friends_item_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/trips_item_type_title"
            android:text="Gaelle Minisini"
            android:layout_marginStart="@dimen/margin_medium"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/friends_item_is_in"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/friends_item_username"
            app:layout_constraintTop_toTopOf="@+id/friends_item_username"
            app:layout_constraintBottom_toBottomOf="@+id/friends_item_username"
            android:text="@string/is_in"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/friends_item_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/friends_item_is_in"
            app:layout_constraintTop_toTopOf="@+id/friends_item_username"
            app:layout_constraintBottom_toBottomOf="@+id/friends_item_username"
            android:text="Sun Peaks BC"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/trips_item_type_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/friends_item_username"
            app:layout_constraintTop_toBottomOf="@id/friends_item_username"
            app:layout_constraintBottom_toTopOf="@id/trips_item_status"
            android:text="@string/trip_type"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/trips_item_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/trips_item_type_title"
            app:layout_constraintTop_toBottomOf="@id/friends_item_username"
            app:layout_constraintBottom_toTopOf="@id/trips_item_status"
            android:text="biking"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/trips_item_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/friends_item_username"
            app:layout_constraintTop_toBottomOf="@id/trips_item_type"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="On Schedule"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>