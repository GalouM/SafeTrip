<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.galou.watchmyback.checklist.CheckListViewModel" />

        <variable
            name="checklist"
            type="com.galou.watchmyback.data.entity.CheckList" />

    </data>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_checklist"
    android:layout_margin="5dp"
    android:onClick="@{() -> viewmodel.modifyCheckList(checklist)}">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/check_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/check_list_item_type"
            android:text="@{checklist.name}"
            android:layout_marginStart="@dimen/margin_medium"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"/>

        <ImageView
            android:id="@+id/check_list_item_type"
            android:layout_width="@dimen/image_small"
            android:layout_height="@dimen/image_small"
            app:layout_constraintStart_toStartOf="@id/check_list_item_name"
            app:layout_constraintTop_toBottomOf="@id/check_list_item_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:imageResouce="@{checklist.tripType.iconId}"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
</layout>